
/* 中部 */
.cart-box {
  background-color: #fff;
  margin: 25rpx 0;
}

.cart-list {
  position: relative;
  padding: 0 0 20rpx 0;
  height: 238rpx;
  border-bottom: 1rpx solid #e9e9e9;
  display: flex;
}

.content {
  width: 100%;
  padding: 10px;
  line-height: 22px;
  margin-right: 0;
}
.cart-list .cart-thumb {
  position: absolute;
  top: 10rpx;
  width: 210rpx;
  height: 238rpx;
}
.cart-count-box1 {
  margin-left: 230rpx;
}
.cart-list .cart-pro-name {
  display: inline-block;
  width: 100%;
  height: 60rpx;
  line-height: 50rpx;
  overflow: hidden;
  float: left;
  font-size: 33rpx;
}

.cart-list .cart-pro-xq {
  display: inline-block;
  height: 70rpx;
  line-height: 70rpx;
  width: 100%;
  float: left;
  color: #a5a2a2;
  font-size: 24rpx;
}

.cart-list .cart-pro-price {
  display: inline-block;
  height: 50rpx;
  line-height: 50rpx;
  float: left;
  color: red;
  font-size: 34rpx;
}

.cart-list .cart-count-box {
  position: absolute;
  right: 14rpx;
  bottom: -26rpx;
  width: 180rpx;
  height: 65rpx;
}

.cart-list .cart-count-box text {
  display: inline-block;
  line-height: 42rpx;
  text-align: center;
  font-size: 35rpx;
  color: #a5a2a2;
}
.cart-del {
  position: absolute;
  right: 20rpx;
  bottom: 100rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #adadad;
}

.shop-fl{
  background-color: #fff;
  margin-bottom: 20rpx;
  color: #adadad;
}
.font-box{
  border:1rpx solid #ededed;
  padding:10rpx 20rpx;
  border-radius:50rpx;
  margin:0 10rpx;
  display: block;
}
.cart-footer{
  display: flex;
  justify-content: flex-end;
  padding:20rpx;
  font-size:27rpx;
}
.cart-header{
  display: flex;
  justify-content: space-between;
  font-size:30rpx;
  padding:20rpx;
  border-bottom:1rpx solid #ededed;
}
.font-sm{
  font-size: 24rpx;
}
.font-gray{
  color: #adadad;
}


