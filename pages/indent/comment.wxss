/* pages/indent/comment.wxss */
page{
   height: 100%;
   background-color: #ededed;
   }

/* 箭头 */
.orders-no-address {
  position: relative;
  height: 90rpx;
  line-height: 90rpx;
  color: #090909;
  border-bottom: 2rpx solid #ededed;
  text-align: center;
  background-color: #fff;
}

.orders-no-address::after {
  position: absolute;
  left: 30rpx;
  top: 34rpx;
  content: '';
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #7f7f7f;
  border-left: 4rpx solid #7f7f7f;
  -webkit-transform: rotate(45deg);
  transform: rotate(320deg);
}

/*  */
.comment{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.comment-title{
  margin: 10rpx 0 30rpx;
  background-color: #fff;
  width: 100%;
}
.comment-t3{
  width:30%;
  text-align:center;
  font-size:32rpx;
}
.comment-t7{
  width:72%;
}
.comment-ti{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #ededed;
}
.star-image {
  position: relative;
  width: 60rpx;
  height: 60rpx;
  src: "../../images/normal.png";
}
.item {
  position: absolute;
  top: 0rpx;
  width: 40rpx;
  height: 80rpx;
}
.comment-content{
  width: 95%;
  background-color: #fff;
}
.comment-con-header{
  height: 100rpx;
  border-bottom: 1rpx solid #ededed;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 30rpx;
}
.comment-con-header view{
  height: 100%;
  display: flex;
  align-items: center;
}
.comment-con-header image{
  width: 60rpx;
  height: 60rpx;
}
.comment-con-header text{
  font-size: 28rpx;
}
.comment-content{
  margin: 10rpx 20rpx 30rpx;
}
.comment-con-textarea{
  width: 100%;
  height: 200rpx;
  max-height: 600rpx;
  font-size: 28rpx;
}
.comment-con-content{
  padding: 10rpx 20rpx 30rpx;
}
.comment-con-footer{
  display: flex;
}
.comment-con-footer view{
  border: 1rpx #ededed dashed;
  padding: 10px;
  display: flex;
  flex-direction: column;
  margin: 0 10rpx;
  justify-content: center;
}
.comment-con-footer view image{
  width: 60rpx;
  height: 60rpx;
}
.comment-con-footer view text{
  font-size: 28rpx;
}
.pass-input{
  background-color:#0aa570;
  color:#fff;
  border-radius:70rpx;
  width:95%;
  font-size:30rpx;
  margin:10rpx 0 50rpx 0;
  height:80rpx;
  line-height: 80rpx;
}
/*上传图片*/
.comment-con-pic{
  display: flex;
}
.educt_hasupload_pic{
    position: relative;
    /* float: left; */
    margin-right: 0.1875rem;
    margin-bottom: 1.1875rem;
    height: 3.34375rem;
    width: 3.34375rem;
    box-sizing: border-box;
}
.educt_hasupload_pic .upload{
  width: 100%;
  height: 100%;
}
.educt_hasupload_pic .deltel{
   position: absolute;
    right: -0.1875rem;
    top: -0.1875rem;
    display: block;
    width: 0.675rem;
    height: 0.675rem;
    border-radius: 50%;
    background: #f7333d;
    color: #fff;
    text-align: center;
    text-decoration: none;
    font-size: 0.25rem;
    overflow: hidden;
    background-clip: padding-box;
}
.xz text{color: #ff7632;}



