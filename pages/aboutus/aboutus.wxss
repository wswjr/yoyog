/* pages/aboutus/aboutus.wxss */
.main{background-color: #efeff4;height:100%;}
.main-header{
            width: 100%;
             height: 500rpx;
             }
 .header-bg{width: 100%;height: 100%;}
 .header-content{
      position: absolute;
      top: 0;
      left:0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content:center;
      text-align: center;
      width: 100%;
      height: 500rpx;
  }
  .header-ms{
     width: 60rpx;
    height: 60rpx;
    position: absolute;
    top: 50rpx;
    right: 30rpx;
  }
  .header-img1{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
  }
  .header-tetx1{
    margin: 20rpx 0;
  }
  .header-tetx2{
    padding: 10rpx 20rpx;
    background-color: #3d4e4878;
    border: 3rpx solid #bfc1c078;
    color: #fff;
    font-size: 30rpx;
    border-radius: 30rpx;
  }
  .main-con1{
    background-color: #fff;
    width: 100%;
    height: 340rpx;
    margin-bottom: 50rpx;
  }
  .column{
    display:flex;
    flex-direction:column;
    align-items:center;
  }
  .con1-in{
    width: 100%;
    height: 170rpx;
    display: flex;
  }
  .con1-in .coin{
    width: 22%;
    margin-left: 20rpx;
    border-left:1rpx solid #efeff4;
  }
  .con1-mt{
    margin-bottom: 40rpx;
    margin-top: 10rpx;
  }
  .con1-in view{
    width: 19%;
    height: 100%;
    display: flex;
    flex-direction:column;
    align-items:center;
    justify-content:center;
    font-size: 28rpx;
  }
  .con1-in view image{
     width: 60rpx;
     height: 60rpx;
     margin-bottom: 20rpx;
  }
  .con1-in:first-child{
    border-bottom: 1px #efeff4 solid;
  }
  .main-con{
    background-color: #fff;
     width: 100%;
  }
  .main-con view{
    width: 100%;
    height:100rpx;
    display: flex;
    flex-direction:row;
    align-items:center;
    font-size: 28rpx;
    border-bottom:1rpx #efeff4 solid;

  }
  .main-con view::after{
    position: absolute;
    right: 30rpx;
    content: '';
    width: 20rpx;
    height: 20rpx;
    border-top: 2rpx solid #7f7f7f;
    border-right: 2rpx solid #7f7f7f;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}
  .main-con image{
     width: 60rpx;
     height: 60rpx;
     margin:0 15rpx 0 50rpx;
  }
  .main-con2{
     height: 400rpx;
     margin-bottom: 30rpx;
  }
  .main-con3{
     height: 500rpx;
     margin-bottom: 15rpx;
  }
  .main-con4{
    height: 100rpx;
     margin-bottom: 20rpx;
  }
 