page{
   height: 100%;
   background-color: #ededed;
   }

/* 箭头 */
.orders-no-address {
  position: relative;
  height: 90rpx;
  line-height: 90rpx;
  color: #adadad;
  border-bottom: 2rpx solid #ededed;
  text-align: center;
  background-color: #fff;
}

.orders-no-address::after {
  position: absolute;
  left: 30rpx;
  top: 34rpx;
  content: '';
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #7f7f7f;
  border-left: 4rpx solid #7f7f7f;
  -webkit-transform: rotate(45deg);
  transform: rotate(320deg);
}

/* 中部 */

.cart-box {
  background-color: #fff;
}

.cart-list {
  position: relative;
  padding: 0 0 20rpx 0;
  height: 185rpx;
  border-bottom: 1rpx solid #e9e9e9;
  display: flex;
}

.content {
  width: 100%;
  padding: 10px;
  line-height: 22px;
  margin-right: 0;
}
.cart-list .cart-thumb {
  position: absolute;
  top: 10rpx;
  width: 185rpx;
  height: 185rpx;
}
.cart-count-box1 {
  margin-left: 230rpx;
}
.cart-list .cart-pro-name {
  display: inline-block;
  width: 100%;
  height: 60rpx;
  line-height: 50rpx;
  overflow: hidden;
  float: left;
  font-size: 33rpx;
}

.cart-list .cart-pro-xq {
  display: inline-block;
  height: 70rpx;
  line-height: 70rpx;
  width: 100%;
  float: left;
  color: #a5a2a2;
  font-size: 24rpx;
}

.cart-list .cart-pro-price {
  display: inline-block;
  height: 50rpx;
  line-height: 50rpx;
  float: left;
  color: red;
  font-size: 34rpx;
}

.cart-list .cart-count-box {
  position: absolute;
  right: 14rpx;
  bottom: -26rpx;
  width: 180rpx;
  height: 65rpx;
}

.cart-list .cart-count-box text {
  display: inline-block;
  line-height: 42rpx;
  text-align: center;
  font-size: 35rpx;
  color: #a5a2a2;
}
.cart-del {
  position: absolute;
  right: 20rpx;
  bottom: 100rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #adadad;
}

/* 优惠 */
.cart-reduced{
  margin: 20rpx 0 40rpx;
  background-color: #fff;
}
.cart-reduced-list{
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items:center;
  border-bottom: 1rpx solid #ededed;
  padding:0 20rpx;
  font-size: 32rpx;
}
.font-ln{
  font-size: 32rpx;
}
.font-xs{
  font-size: 28rpx;
}
.font-sm{
  font-size: 20rpx;
}
.font-red{
  color: red;
}
.font-bz{
  display:flex;
  margin-top: 10rpx;
}
/* 底部 */

.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  line-height: 100rpx;
  padding: 0 100rpx 0 80rpx;
  box-sizing: border-box;
  background: #fff;
  color: #000;
  box-shadow: 0px -3px 16px #e2dede;
}

.order-icon {
  position: absolute;
  right: 140rpx;
  top: 10rpx;
  width: 45rpx;
  height: 45rpx;
}

.order-button {
  background-color: #ff9d32;
  width: 99px;
  height: 56px;
  color: #fff;
  line-height: 56px;
  text-align: center;
  font-size: 33rpx;
  display: block;
}

.cart-text2 {
  font-size: 35rpx;
  position: absolute;
  right: 310rpx;
  top: 0;
}

.cart-toatl-price {
  width: 100rpx;
  color: red;
  font-size: 35rpx;
  position: absolute;
  right: 120px;
  top: 0;
}

.cart-text3 {
  font-size: 27rpx;
  position: absolute;
  top: 45rpx;
  right: 204rpx;
  color: #a5a2a2;
}
