

page,.main{
    height: 100%;
}
.orders-address{
    position: relative;
    padding:20rpx 10rpx 20rpx 120rpx;
    font-size: 36rpx;
    line-height: 60rpx;
    border-bottom: 2rpx solid #ededed;
    color: #4d4c4c;
    background-color: #fff;
    text-align: center;
    font-weight: 500;
    height: 60rpx;
}
.search{
  width: 85%;
}
.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 20rpx;
  text-align: left;
}
.search_arr input{
  margin-left: 100rpx;
  height: 60rpx;
  border-radius: 5px;
}
.bc_text {
  line-height: 68rpx;
  height: 68rpx;
  margin-top: 34rpx;
}
 
.sousuo {
  margin:0 0 10rpx 20rpx;
  width: 15%;
}
.page_row{
  display: flex;
  flex-direction: row;
  font-size:30rpx;
}
.searchcion {
  margin:15rpx 10rpx 10rpx 10rpx;
  position:absolute;
  left:160rpx;
}

.orders-address:after{
    position: absolute;
    left: 30rpx;
    top: 35rpx;
    content: '';
    width: 16px;
    height: 16px;
    border-top: 4rpx solid #7f7f7f;
    border-left: 4rpx solid #7f7f7f;
    -webkit-transform: rotate(320deg);
    transform: rotate(320deg);
}
.categroy-left{
    float: left;
    width: 200rpx;
    height: 100%;
    border-right: 1px solid #ddd;
    box-sizing: border-box;
}
.categroy-left .cate-list{
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    border-left: 3px solid #fff;
    font-size: 30rpx;
}
.categroy-left .cate-list.on{
    color: #0aa570;
    border-color: #0aa570;
}
.categroy-right{
    float: right;
    width: 550rpx;
    height: 100%;
    overflow: hidden;
    
}
.cate-box{
    height: 100%;
    box-sizing: border-box;
}
.cate-box .cate-banner image{
    display: block;
    width: 100%;
    height: 190rpx;
}
.cate-title{
    position: relative;
    height: 30rpx;
    line-height: 30rpx;
    padding:30rpx 0 55rpx;
    text-align: center;
    color: #AB956D;
    font-size: 28rpx;
}
.cate-title::before{
    position: absolute;
    left: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 4rpx;
    background: #AB956D;
}
.cate-title::after{
    position: absolute;
    right: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 4rpx;
    background: #AB956D;
}

.product-list{
    display: inline-block;
    width: 160rpx;
    height: 160rpx;
    text-align: center;
    margin:0 20rpx 20rpx 0;
    font-size: 24rpx;
}
.product-list image{
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 20rpx;
}
.product-list:nth-child(3n){
    margin-right: 0;
}