
.orders-address{
    position: relative;
    padding:20rpx 10rpx 20rpx 50rpx;
    font-size: 36rpx;
    line-height: 60rpx;
    border-bottom: 2rpx solid #ededed;
    color: #4d4c4c;
    background-color: #fff;
    text-align: center;
    font-weight: 500;
    height: 60rpx;
}
.search{
  width: 85%;
}
.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 20rpx;
  text-align: left;
  background-color: #f7f8f9;
}
.search_arr input{
  margin-left: 100rpx;
  height: 60rpx;
  border-radius: 5px;
}
.bc_text {
  line-height: 68rpx;
  height: 68rpx;
  margin-top: 34rpx;
}
 
.sousuo {
  margin:0 0 10rpx 20rpx;
  width: 15%;
}
.page_row{
  display: flex;
  flex-direction: row;
  font-size:28rpx;
}
.searchcion {
  margin:15rpx 10rpx 10rpx 10rpx;
  position:absolute;
  left:90rpx;
}
.orders-address:after{
    position: absolute;
    left: 30rpx;
    top: 35rpx;
    content: '';
    width: 14px;
    height: 14px;
    border-top: 4rpx solid #7f7f7f;
    border-left: 4rpx solid #7f7f7f;
    -webkit-transform: rotate(320deg);
    transform: rotate(320deg);
}
.goods{
  width: 98%;
  height: 100%;
  display: flex;
  padding-left: 10rpx;
  padding-right: 10rpx;
  align-items: center;
  justify-content:center;
  flex-wrap: wrap;
}
.goods-con{
  width: 47%;
  height: 250px;
  margin: 10rpx;
  border-radius: 10rpx;
}
.goods-img1{
  width: 100%;
  height: 74%;
  border-radius: 10rpx 10rpx 0 0;
}
.goods-footer{
  width: 100%;
  height: 24%;
  background-color: #f7f8f9;
  border-radius: 0 0 10rpx 10rpx;
  display:flex;
  flex-direction:column;
  justify-content:center;
}
.goods-text1{
  font-size: 24rpx;
  padding:5rpx 0;
}
.goods-text2{
  font-size: 30rpx;
  color: red;
  margin-top:15rpx;
}
.footer-sc{
  width: 100rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  font-size: 20rpx;
  position:relative;
  bottom:16px;
  left:127px;
  line-height: 35rpx;
}
.footer-sc image{
  width: 30rpx;
  height: 30rpx;
  margin-left:10rpx;
}


