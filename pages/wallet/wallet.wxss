/* pages/wallet/wallet.wxss */
.wallet{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items:center;
  margin: 30rpx 0;
}
.wallet-title{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 90%;
  height: 300rpx;
  background-color: #fa5a2a;
  color: #fff;
  border-radius: 18rpx;
}
.wallet-title text{
  font-size: 28rpx;
  margin-top: 20rpx;
}
.wallet-title .wallet-text1{
  font-size: 88rpx;
}
.wallet-content{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90%;
  height: 300rpx;
  background-color: #fff;
  color: #ababab;
  font-size: 30rpx;
  border-radius: 10rpx;
  flex-wrap: wrap;
  margin:30rpx 0;
}
.wallet-content view{
  width:43%;
  height:40%;
  display:flex;
  flex-direction:column;
  padding: 0 20rpx;
}
.wallet-content view:first-child{
  border-right: 1rpx #ababab solid;
}
.wallet-content view:last-child{
  border-left: 1rpx #ababab solid;
}

.wallet-content .wallet-text2{
  color: #111;
  font-size: 40rpx;
  margin-top: 20rpx;
}