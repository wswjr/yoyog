page {
  background-color: #efeff4;
}

.main {
  background-color: #efeff4;
}

.cart-header {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  padding: 0 100rpx 0 80rpx;
  box-sizing: border-box;
  background: #fff;
  color: #000;
  margin-bottom: 10rpx;
  box-shadow: 0px 3px 16px #e2dede;
}

.header-text1 {
}

.hide {
  display: none;
}

.show {
  display: block;
}

.zw {
  height: 3rpx;
  width: 100%;
  background-color: #e2dede;
}

.header-text2 {
  font-size: 30rpx;
  margin: 0 20rpx;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}

.cart-box {
  margin: 120rpx 0;
  background-color: #fff;
}

.cart-list {
  position: relative;
  padding: 0 0 20rpx 0;
  height: 185rpx;
  border-bottom: 1rpx solid #e9e9e9;
  display: flex;
}

.cart-list .cart-pro-select {
  position: absolute;
  left: 20rpx;
  top: 90rpx;
  width: 45rpx;
  height: 45rpx;
}

.cart-count-box1 {
  margin-left: 300rpx;
}

.content {
  width: 100%;
  padding: 10px;
  line-height: 22px;
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
}

.del {
  background-color: orangered;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  position: relative;
  height: 200rpx;
  line-height: 200rpx;
}

.touch-move-active .content, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.cart-list .cart-thumb {
  position: absolute;
  top: 10rpx;
  left: 85rpx;
  width: 185rpx;
  height: 185rpx;
}

.cart-list .cart-pro-name {
  display: inline-block;
  width: 100%;
  height: 60rpx;
  line-height: 50rpx;
  overflow: hidden;
  float: left;
  font-size: 33rpx;
}

.cart-list .cart-pro-xq {
  display: inline-block;
  height: 70rpx;
  line-height: 70rpx;
  width: 100%;
  float: left;
  color: #a5a2a2;
  font-size: 24rpx;
}

.cart-list .cart-pro-price {
  display: inline-block;
  height: 50rpx;
  line-height: 50rpx;
  float: left;
  color: red;
  font-size: 34rpx;
}

.cart-list .cart-count-box {
  position: absolute;
  right: 14rpx;
  bottom: -26rpx;
