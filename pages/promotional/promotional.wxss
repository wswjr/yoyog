/* pages/promotional/promotional.wxss */

page {
  height: 100%;
  background-color: #ededed;
}

/* 箭头 */

.orders-no-address {
  position: relative;
  height: 90rpx;
  line-height: 90rpx;
  color: #090909;
  border-bottom: 2rpx solid #ededed;
  text-align: center;
  background-color: #fff;
}

.orders-no-address::after {
  position: absolute;
  left: 30rpx;
  top: 34rpx;
  content: '';
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #7f7f7f;
  border-left: 4rpx solid #7f7f7f;
  -webkit-transform: rotate(45deg);
  transform: rotate(320deg);
}

.tab-header {
  display: flex;
  justify-content: center;
  align-items: center;
  width:100%;
  height:100rpx;
  background-color: #fff;
}
.tab-header view{
  flex:1;
  font-size:30rpx;
  display:flex;
  align-items:center;
  justify-content:center;
}
.goods{
  width:98%;
  height:100%;
  display:flex;
  padding-left:10rpx;
  padding-right:10rpx;
  align-items:center;
  flex-wrap:wrap;
  margin: 20rpx 0;
}
.goods-con{
  width:47%;
  /* height:250px; */
  margin:10rpx;
  border-radius:10rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.goods-con .mar-l1{margin: 0;}
.goods-con text{
  font-size: 27rpx;
}
.goods-image{
  width: 80%;
  height: 250rpx;
  margin: 40rpx 0 20rpx;
}
.goodds-name{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.goodds-name text{
  font-size: 26rpx;
  margin: 4rpx 0;

}
.goodds-price{
  display:flex;
  justify-content:space-between;
  margin:30rpx 0;
  width:90%;
  align-items:center;
}
.goodds-price text{
   color: red;
   font-size: 40rpx;
}
.font-box1{
  border: 1rpx #0aa750 dashed;
  color: #0aa750;
  width: 220rpx;
  text-align: center;
  border-radius:15rpx;
}
.font-box3{
  color: #0aa750;
  text-align: center;
}
.goodds-price .font-box2{
  background-color: red;
  color: #fff;
  padding: 2rpx 20rpx;
  border-radius:15rpx;
  font-size: 22rpx;
  height: 45rpx;
  line-height: 45rpx;
}
.goodds-progress1{
  display:flex;
  justify-content:space-between;
  margin:0 0 20rpx;
  width:90%;
}
.goodds-progress1 text{
  font-size: 24rpx;
  color: #7f7f7f;
}

.goodds-progress1 progress{width: 60%;}
.tab-header .active {
  color: #0aa750;
}
.goodds-progress2{
  width:100%;
  display:flex;
}
.goodds-progress2 text{
  background-color: #0aa750;
  color: #fff;
  font-size: 28rpx;
  border-radius: 20rpx;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
.goodds-progress2 .font-color1{
  background-color: #c80000;
}
.goods-qclb{
  justify-content: flex-start;
}
.goodds-price .font-box4{
  font-size: 23rpx;
  color: #7f7f7f;
  text-decoration:line-through;
  margin-left: 23rpx;
  /* position: relative;
  position: absolute; */
}
.tab-content .right-item {
  display: none;
}
.goods-image1{
  position:relative;
  right:27%;
  width:120rpx;
  height:120rpx;
  /* top:22%; */
  bottom:8rpx;
}
.goods-image1 text{
  position:relative;
  bottom:92%;
  left:27rpx;
  color:#fff;
}
.tab-content .right-item.active {
  display: block;
}
