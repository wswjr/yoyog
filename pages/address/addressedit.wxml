<!--pages/address/addressedit.wxml-->
<view class="main">
  <view class="orders-no-address">管理收货地址</view>
  <view class='list'>
      <view class='address-add'>
         <view>
            <text>收货人</text>
            <input  type="text" value="{{address.phone}}" placeholder="请输入收货人"/>
         </view>
         <view>
            <text>联系电话</text>
            <input  type="text" value="{{address.phone}}" placeholder="请输入联系电话"/>
         </view>
         <view>
            <text>所在地区</text>
            <input  type="text" value="{{address.phone}}" placeholder="请输入所在地区"/>
         </view>
         <view>
            <text>详细地址</text>
            <textarea class='comment-con-textarea' />
         </view>
      </view>
      <button class='pass-input' form-type="submit">保存</button>
  </view>
</view>