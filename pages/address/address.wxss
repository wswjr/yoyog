/* pages/address/address.wxss */

.list {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 30rpx 0;
}

.address {
  width: 84%;
  background-color: #fff;
  padding:20rpx 30rpx 10rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.address-header{
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #6c6c6c;
}
.address-text1{
  font-size: 34rpx;
  color: #000;
}
.address-content{
  font-size: 26rpx;
  width: 80%;
  margin: 20rpx 0;
  color: #6c6c6c;
}
.address-footer{
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  height: 60rpx;
  border-top:1rpx solid #d9d9d8;
  align-items:center;
}
.address-footer view{
  display:flex;
  align-items:center;
}
.address-footer text{
  margin-left: 25rpx;
}
.address-add{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0rpx;
  background-color: green;
  color: #fff;
  text-align: center;
}
.ds-no{display: none}
.ds-no.active{display: block}