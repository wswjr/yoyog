.wx-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}
.wx-dialog {
    position:fixed;
    z-index:5000;
    width:80%;
    max-width:600rpx;
    top:50%;
    left:60%;
    -webkit-transform:translate(-50%, -50%);
    transform:translate(-50%, -50%);
    background-color:#fff;
    text-align:center;
    border-radius:3px;
    overflow:auto;
    height:100%;
}

.wx-dialog-title {
  width: 96%;
  height: 100%;
  font-size: 18px;
  padding: 5px 2% 5px 2%;
}
.orders-address{
    position: relative;
    padding:20rpx 10rpx 20rpx 50rpx;
    font-size: 36rpx;
    line-height: 60rpx;
    border-bottom: 2rpx solid #ededed;
    color: #4d4c4c;
    background-color: #fff;
    text-align: center;
    font-weight: 500;
    height: 60rpx;
}
.wx-dialog-text1{
   font-size: 34rpx;
}
.wx-dialog-text2{
      float:right;
      margin-right:10rpx;
      font-size:30rpx;
      background-color:#0aa570;
      color:#fff;
      padding:0 30rpx;
}
.wx-dialog-fl{
 border-bottom: 2rpx solid #ededed;
}
.wx-dialog-he{
  height: 80rpx;
  border-bottom: 2rpx solid #ededed;
  font-size:30rpx;
  text-align:left;
  display:flex;
  align-items:center;
  padding-left:16px;
}
.wx-dialog-co{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:flex-start;
  flex-wrap: wrap;
  padding:20rpx 0;
}
.wx-dialog-fl .wx-cen{
 justify-content:center;
}
.wx-dialog-fl .wx-cen input{
    width:150rpx;
    background-color:#ededed;
    margin:16rpx;
    padding:5rpx 5rpx;
    font-size:30rpx;
    color:#9b9b9b;
    border-radius:10rpx; 
}
.wx-dialog-co text{
    width:27%;
    background-color:#ededed;
    margin:16rpx;
    padding:5rpx 5rpx;
    font-size:30rpx;
    color:#9b9b9b;
    border-radius:10rpx;
}
.orders-address:after{
    position: absolute;
    left: 30rpx;
    top: 35rpx;
    content: '';
    width: 14px;
    height: 14px;
    border-top: 4rpx solid #7f7f7f;
    border-left: 4rpx solid #7f7f7f;
    -webkit-transform: rotate(320deg);
    transform: rotate(320deg);
}




.canvas {
  width: 100%;
  height: 100%;
}

.wx-dialog-title image {
  width: 100%;
  height: 100%;
}

.wx-dialog-content {
  padding: 15px 15px 5px;
  min-height: 40px;
  font-size: 16px;
  line-height: 1.3;
  word-wrap: break-word;
  word-break: break-all;
  color: #5a5a5a;
}

.wx-dialog-footer {
  display: flex;
  align-items: center;
  position: relative;
  line-height: 45px;
  font-size: 17px;
}

.wx-dialog-footer::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid #d5d5d6;
  color: #d5d5d6;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.wx-dialog-btn {
  -webkit-flex: 1;
  flex: 1;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  position: relative;
  width: 33.3%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20px 0;
}

.wx-dialog-btn image {
  width: 26px;
  height: 26px;
}
.wx-dialog-btn .share {
  position: absolute;
  opacity: 0;
  margin-top: -25px;
  width: 100px;
  height: 100px;
}
.wx-dialog-btn text {
  margin-top: -10px;
  font-size: 14px;
  color: 5a5a5a;
}

